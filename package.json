{
  "name": "terraform-cloud-sync",
  "displayName": "Terraform Cloud Sync",
  "description": "Sync variables and manage runs from Terraform Cloud workspaces â€” directly from VSCode.",
  "publisher": "jose-antunez",
  "icon": "media/tfcloud-sync-logo-min.png",
  "author": {
    "name": "Jose AntÃºnez",
    "email": "jl.antunez88@gmail.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/BLCA88/extension-terraform-sync"
  },
  "homepage": "https://github.com/joseantunez/terraform-cloud-sync#readme",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tfcloudSidebar",
          "title": "%view.container.tfcloudSidebar%",
          "icon": "media/tfcloud-sync-lateral.png"
        }
      ]
    },
    "views": {
      "tfcloudSidebar": [
        {
          "id": "tfcloudProjects",
          "name": "%view.tfcloudProjects%",
          "icon": "media/tf.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "tfcloud.login",
        "title": "%command.tfcloud.login%",
        "icon": {
          "light": "media/connect-black.svg",
          "dark": "media/connect-white.svg"
        },
        "category": "Terraform Cloud"
      },
      {
        "command": "tfcloud.logout",
        "title": "%command.tfcloud.logout%",
        "icon": {
          "light": "media/XMark.svg",
          "dark": "media/XMark-white.svg"
        },
        "category": "Terraform Cloud"
      },
      {
        "command": "tfcloud.uploadTfvars",
        "title": "%command.tfcloud.uploadTfvars%",
        "icon": {
          "light": "media/ArrowUp.svg",
          "dark": "media/ArrowUp-white.svg"
        },
        "category": "Terraform Cloud"
      },
      {
        "command": "tfcloud.downloadTfvars",
        "title": "%command.tfcloud.downloadTfvars%",
        "icon": {
          "light": "media/ArrowDownTray.svg",
          "dark": "media/ArrowDownTray-white.svg"
        },
        "category": "Terraform Cloud"
      },
      {
        "command": "tfcloud.refresh",
        "title": "%command.tfcloud.refresh%",
        "icon": {
          "light": "media/ArrowPath.svg",
          "dark": "media/ArrowPath-white.svg"
        },
        "category": "Terraform Cloud"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "tfcloud.uploadTfvars",
          "when": "viewItem == workspace",
          "group": "navigation@tfvars",
          "title": "%menu.uploadTfvars%"
        },
        {
          "command": "tfcloud.downloadTfvars",
          "when": "viewItem == workspace",
          "group": "navigation@tfvars",
          "title": "%menu.downloadTfvars%"
        }
      ],
      "view/title": [
        {
          "command": "tfcloud.login",
          "when": "view == tfcloudProjects",
          "group": "navigation"
        },
        {
          "command": "tfcloud.refresh",
          "when": "view == tfcloudProjects",
          "group": "navigation"
        },
        {
          "command": "tfcloud.logout",
          "when": "view == tfcloudProjects",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tfcloudProjects",
        "contents": "Conectate a Terraform Cloud para empezar.\n[ðŸ”’ Iniciar sesiÃ³n en Terraform Cloud](command:tfcloud.login)",
        "when": "!tfcloud.loggedIn"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "handlebars": "^4.7.8"
  }
}
